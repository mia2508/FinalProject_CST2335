<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovieInformation"
    android:background="@color/light_blue">

    <ImageView
        android:id="@+id/movieInfoImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/movieTitle_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_Title"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/movieYear_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_Year"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/movieRating_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_Rating"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/movieRuntime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_Runtime"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/movieMainActors_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_mainActors"
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/plot_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_plot"
        android:textSize="20dp"
        android:typeface="sans" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Add" />
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/favouriteMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="favourite movie"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar_movie_information"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="116dp" />

</LinearLayout>